extends ../../../../templates/masterguests
block main
	.profile-page
		//- Heading Page
		#heading-page.page-header.header-filter(data-parallax="true" style="background-image: url('/img/Nave.jpeg');")
			.container
				.row
					.col-md-9.main-header__textbox
						h1.font-italic Funeral Mass
						p.text-uppercase.card-desc
							| Guidelines | Requirements
		#raised-section.main.main-raised
			.container
				.row
					.col-md-12
						hr.mt-5.mx-5
				.row
					.col-md-12.my-3
						h3.text-center.text-uppercase.guidelines--text Event Application Form
				//- .row
				//- 	.col-md-12.ml-5
				//- 		h5.text-uppercase.guidelines--header [Common Info (Sick-Deceased)]
				.row
					.col-md-6.my-3
						form(action="#")
							.form-group
								label.label-control Name of the deceased:
								.row
									.col-md-4
										input.form-control(type='text' placeholder="Last Name" name='blessinglastname')
									.col-md-4
										input.form-control(type='text' placeholder="First Name" name='blessingfirstname')
									.col-md-4
										input.form-control(type='text' placeholder="Middle Name" name='blessingmiddlename')
							.form-group.m-0
								label.label-control Gender:
									.form-check.ml-3
										label.form-check-label
											input.form-check-input(type="radio" name="blessinggender" id="exampleRadios2" value="option2")
											| Male
											span.circle
												span.check
										label.form-check-label.ml-3
											input.form-check-input(type="radio" name="blessinggender" id="exampleRadios2" value="option2")
											| Female
											span.circle
												span.check
							.form-group
								label.label-control Birthday:
								input.form-control.datetimepicker(type='text' name='blessingbirthday')
							.form-group
								label.label-control Birthplace:
								input.form-control(type='text' name='blessingbirthplace')
							.form-group
								label(for='exampleFormControlTextarea1') Address:
								textarea#exampleFormControlTextarea1.form-control(rows='3' name='blessingaddress')
					.col-md-6.my-3
						.form-group
							label.label-control Cause of Death:
							input.form-control(type='text' name='blessingreason')
						.form-group
							label.label-control Place where the blessing will happen:
							.ml-4
								.form-check
									label.form-check-label
										input.form-check-input(type="radio" name="blessingvenue" id="exampleRadios1" value="option1" checked)
										| Same as his/her address
										span.circle
											span.check
								.form-check
									label.form-check-label
										input.form-check-input(type="radio" name="blessingvenue" id="exampleRadios2" value="option2")
										| INLPP
										span.circle
											span.check
								.form-check
									label.form-check-label
										input.form-check-input(type="radio" name="blessingvenue" id="exampleRadio32" value="option3")
										.dropdown-toggle.mr-3 Other
										//- | Other
										span.circle
											span.check
								//- .form-group
								textarea#exampleFormControlTextarea1.form-control(placeholder="Please Enter Complete Address" rows="3")
						label.label-control FILE UPLOAD
						.form-group.form-file-upload.form-file-multiple.p-0
							input.inputFileHidden(type='file', multiple='')
							.input-group
								input.form-control.inputFileVisible(type='text', placeholder='Birth Certificate')
								span.input-group-btn
									button.btn.btn-fab.btn-round.btn-primary(type='button')
										i.fa.fa-file(aria-hidden='true')
						.form-group.form-file-upload.form-file-multiple.p-0
							input.inputFileHidden(type='file', multiple='')
							.input-group
								input.form-control.inputFileVisible(type='text', placeholder='Death Certificate')
								span.input-group-btn
									button.btn.btn-fab.btn-round.btn-primary(type='button')
										i.fa.fa-file(aria-hidden='true')
				.row
					.col-md-12.my-5.text-right
						a.btn-design.mx-2(href="#") Submit
						a.btn-design.btn-valid(href="#") Cancel
