block main
	.profile-page
		//- Heading Page
		#heading-page.page-header.header-filter(data-parallax="true" style="background-image: url('/img/Nave.jpeg');")
			.container
				.row
					.col-md-9.main-header__textbox
						h1.font-italic Establishment Blessing
						a(href="/guest/establishment")
							p.text-uppercase.card-desc
								| Guidelines | Requirements
		#raised-section.main.main-raised
			.container
				.row
					.col-md-12
						hr.mt-5.mx-5
				.row
					.col-md-12.my-3
						h3.text-center.text-uppercase.guidelines--text Request Form
				form(action="/guest/funeral/form" method="post")
					input.form-control(type='hidden' name='userID' value=`${user.int_userID}`)
					.row
						.col-md-8.mx-auto.my-auto
							.form-group
								label.label-control Place where the will happen:
								.ml-4
									.form-check
										label.form-check-label
											input#ourhomeradio.form-check-input(type="radio" name="venue" value="sameaddress" checked)
											.dropdown-toggle.mr-3 Our Home
											span.circle
												span.check
										label.form-check-label.ml-3
											input#otherradio.form-check-input(type="radio" name="venue" value="other")
											.dropdown-toggle.mr-3 Other
											span.circle
												span.check
										#ourhome.form-group
											.form-group.mt-2
												label.label-control Owner:
												input.form-control(type='text' placeholder="Enter Name of Owner" name='birthplace')
											.form-group
												label.label-control House/Establishment Location:
												textarea.form-control(placeholder="Please Enter Complete Address" rows="3" name='othervenue')
											.form-group
												label.label-control Contact Number:
												input.form-control(type='number' name='birthplace')
											.form-group
												label.label-control Email:
												input.form-control(type='Email' name='birthplace')
										#other.form-group
											.form-group.mt-2
												label.label-control Owner:
