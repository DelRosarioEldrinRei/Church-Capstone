			.row
				.col-lg-12.col-md-12
						.card
								.card-header.card-header-primary
										h4.card-title Sacramental Events and Services
										//- p.card-category Date: June 24, 2018
								.card-body.table-responsive
										table.table.table-hover
												thead.text-primary
														th ID
														th Name
														
														th.text-center(style=" width:120px") Actions
												tbody
														each sacrament in sacraments
															tr
																td=sacrament.int_eventID
																td=sacrament.var_eventname
																
																
																<td class="td-actions text-right">
																		a.button(rel="tooltip" class="btn btn-info" href=`/admin/maintenance-facilities`)
																				<i class="material-icons">person</i>
																		a.button(rel="tooltip" class="btn btn-success" href=`/admin/maintenance-facilities`  data-toggle="modal" data-target="#editFacility")
																				<i class="material-icons">edit</i>
																		a.button(rel="tooltip" class="btn btn-danger" href=`/admin/maintenance-facilities/${sacrament.int_facilityID}/delete`)
																				<i class="material-icons">close</i>
																</td>
	#conditionModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true')
		.modal-dialog.modal-notify.modal-success(role='document')
			// Content
			.modal-content
				// Header
				.modal-header
					p.heading.lead Add Facility
					button.close(type='button' data-dismiss='modal' aria-label='Close')
						span.white-text(aria-hidden='true') &times;
				// Body
				.modal-body
					form.form(action="/admin/addfacility" method="post")
						.form-group
							label.label-control Facility Name
							input.form-control(type='text' name='facilityname')
						.form-group
							label.label-control Fee
							input.form-control(type='number' name='fee')
						.row
							.col-md-12.text-center.my-3
								button.btn.btn-primary(type='submit') Add	
		
